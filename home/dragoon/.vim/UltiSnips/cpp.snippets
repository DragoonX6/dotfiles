snippet class "class .. (class)"
class ${1:name}
{
public:
	$1() = default;
	$1($1 const &other) = default;
	$1($1 &&other) noexcept = default;
	~$1() noexcept = default;

	$1 &operator=($1 const &other) = default;
	$1 &operator=($1 &&other) noexcept = default;
};

static_assert(std::is_copy_constructible_v<$1>);
static_assert(std::is_copy_assignable_v<$1>);
static_assert(std::is_trivially_copyable_v<$1>);

static_assert(std::is_move_constructible_v<$1>);
static_assert(std::is_move_assignable_v<$1>);
endsnippet

snippet bclass "bclass .. (base class)"
class ${1:name}
{
public:
	$1() = default;
	$1($1 const &other) = default;
	$1($1 &&other) noexcept = default;
