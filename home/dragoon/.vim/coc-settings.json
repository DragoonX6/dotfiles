{
	"suggest.autoTrigger": "trigger",
	"suggest.triggerCharacters": [".", ">"],
	"languageserver":
	{
		"ccls":
		{
			"command": "ccls",
			"filetypes": ["c", "cpp"],
			"rootPatterns":
			[
				".ccls",
				"compile_commands.json",
				".git/",
				".hg/",
				".ccls_root"
			],
			"initializationOptions":
			{
				"cache": { "directory": "/tmp/ccls/cache" },
				"compilationDatabaseDirectory": "./build",
				"snippetSupport": false
			}
		}
	}
}
